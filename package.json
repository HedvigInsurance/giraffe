    "@types/node-fetch": "2.1.2",
    "@types/uuid": "^3.4.4",
    "@types/ws": "^6.0.1",
    "apollo": "^1.9.2",
    "concurrently": "^4.0.1",
    "graphql-schema-typescript": "^1.2.8",
    "nodemon": "^1.18.6",
