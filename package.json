    "apollo-link-context": "^1.0.14",
    "apollo-link-http": "^1.5.5",
    "apollo-link-redis-cache": "0.0.2",
    "apollo-server-core": "^2.1.0",
    "apollo-server-koa": "^2.1.0",
    "aws-sdk": "^2.432.0",
    "dotenv": "^6.1.0",
    "graphql": "^14.0.2",
    "graphql-middleware": "^2.0.2",
    "graphql-redis-subscriptions": "^2.0.0",
    "graphql-subscriptions": "1.0.0",
    "graphql-tag": "^2.10.0",
    "graphql-tools": "^4.0.3",
